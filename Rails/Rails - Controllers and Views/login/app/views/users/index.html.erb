<% content_for :title do %>Display all Users<% end %>

<div id="wrapper">
	<h1>All Users</h1>
	
	<% if flash[:notice] %>
		<%= flash[:notice] %>
	<% end %>
	
	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>ID</th>
				<th>Name</th>
				<th>Email</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>
			<tr>
				<td><%= user.id %></td>
				<td><%= user.name %></td>
				<td><%= user.email %></td>
				<td>
					<a href="/users/<%= user.id %>" class="btn btn-default">Show</a>
					<a>
						<%= link_to 'Destroy', user_path(user), :method => :delete,
						data: { confirm: 'Are you sure you want to delete this user?' },
                    	:class => "btn btn-danger" %>
                    </a>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<a href="/users/new">Add new user</a>
</div>