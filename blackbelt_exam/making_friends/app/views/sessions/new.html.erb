<% content_for :title do %>Sign In<% end %>

<div id="wrapper">
	<h1>Sign In</h1>

	<% if flash[:error] %>
		<p><%= flash[:error] %></p>
	<% end %>

	<%= simple_form_for(:session, :url => sessions_path) do |f| %>
	  <%= f.input :email %>
	  <%= f.input :password %>
	  <%= f.button :submit, :class => "btn btn-primary" %>
	<% end %>

	<a href="/signup">Sign up</a>
</div>