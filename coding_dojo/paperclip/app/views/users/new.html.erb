<% if session[:errors] %>
	<% session[:errors].each do |msg| %>
		<li class="error"><%= msg %></li>
	<% end %>
<% end %>
<%= form_for @user, :url => users_path, :html => {:multipart => true} do |f| %>
	<%= f.label :first_name %>
	<%= f.text_field :first_name %>
	<%= f.label :last_name %>
	<%= f.text_field :last_name %>
	<%= f.label :email %>
	<%= f.text_field :email %>
	<%= f.label :avatar %>
	<%= f.file_field :avatar %>
	<%= f.submit :submit %>
<% end %>

<a href='/'>See all users and uploaded images</a>