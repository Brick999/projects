<% content_for :title do %>Login<% end %>

<div id="wrapper">
	<h1>Login</h1>

	<% if flash[:error] %>
		<p><%= flash[:error] %></p>
	<% end %>

	<%= simple_form_for(:session, :url => sessions_path) do |f| %>
	  <%= f.input :email %>
	  <%= f.input :password %>
	  <%= f.submit "Sign In", :class => "btn btn-primary" %>
	<% end %>
</div>